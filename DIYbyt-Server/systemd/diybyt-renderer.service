[Unit]
Description=DIYbyt Renderer Service
After=network.target

[Service]
Type=simple
User=ycsgc
WorkingDirectory=/opt/DIYbyt/render/src/components/ProgramManager
Environment="PATH=/opt/DIYbyt/render/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment="PYTHONPATH=/opt/DIYbyt/render/venv/lib/python3.12/site-packages"
ExecStart=/opt/DIYbyt/render/venv/bin/python pixlet_renderer.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target